<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:drawable="@drawable/abc_spinner_textfield_background_material">
        <shape>
            <solid
                android:color="#343434" />
            <stroke

                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>

    <item
        android:drawable="@drawable/abc_spinner_mtrl_am_alpha">

        <shape>

            <gradient
                android:startColor="#343434"
                android:endColor="#1d1d1d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="2dp" />


        </shape>
    </item>
    <item>

        <shape>

            <gradient
                android:startColor="#343434"
                android:endColor="#1d1d1d"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="2dp" />


        </shape>
    </item>
</layer-list>