<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    card_view:cardElevation="6dp"
    card_view:cardUseCompatPadding="false"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@drawable/card_select">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="2dp"
            android:id="@+id/image_card_list"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/unk" />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medium Text"
            android:textColor="@color/primarytext"
            android:id="@+id/text_card_l"
            android:layout_alignTop="@+id/image_card_list"
            android:layout_alignLeft="@+id/text_card_m"
            android:layout_alignStart="@+id/text_card_m" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Large Text"
            android:visibility="invisible"
            android:textColor="#000000"
            android:id="@+id/text_card_m"
            android:layout_below="@+id/text_card_l"
            android:layout_toRightOf="@+id/image_card_list"
            android:layout_toEndOf="@+id/image_card_list"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>