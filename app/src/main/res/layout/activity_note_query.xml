<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/toolbar_actionbar"
            layout="@layout/toolbar_new"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <!--#f9f9f9-->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="false"
                        android:id="@+id/view"
                        android:layout_centerHorizontal="true">

                        <com.rey.material.widget.Spinner
                            android:id="@+id/semdrop"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:spn_labelTextSize="15dp"
                            android:gravity="center"
                            app:spn_label="Sem"
                            app:spn_arrowColor="#000000"
                            app:spn_arrowSize="3dp"
                            app:spn_labelTextColor="#1976d2"
                            style="@style/LightSpinner"

                            />
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="false"
                        android:id="@+id/view1"
                        android:layout_centerHorizontal="true">

                        <com.rey.material.widget.Spinner
                            android:id="@+id/yeardrop"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:spn_arrowColor="#000000"
                            app:spn_arrowSize="3dp"
                            app:spn_labelTextSize="15dp"
                            android:gravity="center"
                            app:spn_label="Year"
                            app:spn_labelTextColor="#1976d2"
                            style="@style/LightSpinner"

                            />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="false"
                        android:id="@+id/view2"
                        android:layout_centerHorizontal="true">

                        <com.rey.material.widget.Spinner
                            android:id="@+id/subdrop"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            app:spn_arrowColor="#000000"
                            app:spn_arrowSize="3dp"
                            android:gravity="center"
                            app:spn_labelTextSize="15dp"
                            app:spn_label="Subject"
                            app:spn_labelTextColor="#1976d2"
                            style="@style/LightSpinner"

                            />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        card_view:cardElevation="6dp"
                        card_view:cardUseCompatPadding="false"
                        android:id="@+id/view3"
                        android:layout_centerHorizontal="true">

                        <com.rey.material.widget.Spinner
                            android:id="@+id/notesdrop"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center"
                            app:spn_label="Type"
                            app:spn_arrowColor="#000000"
                            app:spn_arrowSize="3dp"
                            app:spn_labelTextSize="15dp"
                            app:spn_labelTextColor="#1976d2"

                            style="@style/LightSpinner"
                            />
                    </android.support.v7.widget.CardView>


                    <com.rey.material.widget.Button
                        android:id="@+id/note_submit"
                        android:layout_width="150dp"
                        android:elevation="6dp"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textColor="#1976d2"
                        android:textColorHighlight="#FFFFFF"
                        android:background="@drawable/bluebtn_press"
                        app:rd_style="@style/LightRaiseColorButtonRippleStyle"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:clickable="true"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_gravity="center"
                        android:layout_marginTop="50dp" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"></LinearLayout>


                </LinearLayout>



            </ScrollView>



        </LinearLayout>
    </LinearLayout>

    <!-- android:layout_marginTop="?android:attr/actionBarSize"-->
    <com.sjitportal.home.portal.ScrimInsetsFrameLayout
        android:id="@+id/scrimInsetsFrameLayout"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        app:insetForeground="#4000"
        android:elevation="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <fragment
            android:id="@+id/fragment_drawer"
            android:name="com.sjitportal.home.portal.NavigationDrawerFragment"
            android:layout_width="@dimen/navigation_drawer_width"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:layout="@layout/fragment_navigation_drawer"
            tools:layout="@layout/fragment_navigation_google" />
    </com.sjitportal.home.portal.ScrimInsetsFrameLayout>
</android.support.v4.widget.DrawerLayout>
