<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:repeatCount="infinite">
    <scale
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="10000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="4000"
        android:fillAfter="true"
        android:fromXScale="2"
        android:fromYScale="2"
        android:toXScale="3"
        android:toYScale="3"
    />
    <translate
        android:duration="8000"
        android:fillAfter="true"
        android:fromXDelta="0%p"
        android:startOffset="14000"
        android:toXDelta="75%p" />

    <scale
        android:duration="8000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="22000"
        android:fillAfter="true"
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="0.75"
        android:toYScale="0.75"/>
    <translate
        android:duration="8000"
        android:fillAfter="true"
        android:fromYDelta="0%p"
        android:startOffset="30000"
        android:toYDelta="55%p"/>
    <scale
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="8000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="38000"
        android:fillAfter="true"
        android:fromXScale="1"
        android:fromYScale="1"
        android:toXScale="2"
        android:toYScale="2"
    />
    <translate
        android:duration="8000"
        android:fillAfter="true"
        android:fromYDelta="0%p"
        android:startOffset="38000"
        android:toYDelta="75%p"/>
    <scale
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:duration="8000"
        android:pivotX="50%"
        android:pivotY="50%"
        android:startOffset="46000"
        android:fillAfter="true"
        android:fromXScale="0.85"
        android:fromYScale="0.85"
        android:toXScale="1"
        android:toYScale="1"
        />
    <translate
        android:duration="8000"
        android:fillAfter="true"
        android:fromXDelta="0%p"
        android:startOffset="46000"
        android:toXDelta="75%p" />
</set>